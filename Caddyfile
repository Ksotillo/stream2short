{
    auto_https off
    admin off
}

# API (ports 80/443 inside container -> 3080/3443 on host)
:443 {
    tls internal {
        on_demand
    }
    reverse_proxy api:3000
}

:80 {
    reverse_proxy api:3000
}

# Dashboard (port 3001 inside container -> 3001 on host)
:3001 {
    reverse_proxy dashboard:3001
}